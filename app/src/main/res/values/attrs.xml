<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmotionalFaceView">
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomLayoutView">
        <attr name="custom_component_title" format="reference" />
    </declare-styleable>

    <declare-styleable name="ColorOptionView">
        <attr name="titleText" format="string" />
        <attr name="valueColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomFanControllerView">
        <attr name="fanOnColor" format="reference|color"/>
        <attr name="fanOffColor" format="reference|color"/>
    </declare-styleable>
</resources>